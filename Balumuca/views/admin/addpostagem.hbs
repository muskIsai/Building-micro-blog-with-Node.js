
<div class="card">
    <div class="card-body">
        <h4>Nova postagem</h4>
        <form action="">
            <label for="titulo">Titulo: </label>
            <input type="text" class="form-control" name="titulo">
            <label for="slug">Slug: </label>
            <input type="text" class="form-control" name="slug">
            <label for="descricao">Descrição: </label>
            <input type="text" class="form-control" name="descricao">
            <label for="conteudo">Conteudo: </label><br>
            <textarea name="conteudo" id="" class="form-control "></textarea>
            <label for="categoria">Categoria: </label>
            <select name="categoria" id="" class="custom-select">
                {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="">Nenhuma categoria registada</option>
                {{/each}}
            </select>
            <button type="submit" class="btn btn-success mt-4">Criar postagem</button>
        </form>
    </div>
</div>